# OAuth Providers (Optional - leave empty to disable)
# Google OAuth - Get from https://console.cloud.google.com/apis/credentials
# Authorized redirect URI: {ORIGIN}/api/auth/callback/google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Discord OAuth - Get from https://discord.com/developers/applications
# Authorized redirect URI: {ORIGIN}/api/auth/callback/discord
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""

# Spotify API Credentials
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=""
SPOTIFY_CLIENT_SECRET=""

# Discogs API Credentials
# Get these from https://www.discogs.com/settings/developers
DISCOGS_CONSUMER_KEY=""
DISCOGS_CONSUMER_SECRET=""

# Optional: Cookie domain to use when deploying (e.g. .example.com)
COOKIE_DOMAIN=""

# Require email verification for new signups (true/false)
REQUIRE_EMAIL_VERIFICATION="false"

# Mailer DSN or provider config (for sending verification emails)
MAILER_DSN=""
